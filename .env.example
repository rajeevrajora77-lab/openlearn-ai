# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://openlearn:your_password@postgres:5432/openlearn_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_URL=redis://redis:6379
REDIS_MAX_CONNECTIONS=50

# ======================
# QDRANT (VECTOR DB)
# ======================
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=learning_content_embeddings

# ======================
# MINIO (OBJECT STORAGE)
# ======================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=openlearn-content

# ======================
# RABBITMQ (MESSAGE QUEUE)
# ======================
RABBITMQ_URL=amqp://openlearn:dev_password@rabbitmq:5672/

# ======================
# JWT AUTHENTICATION
# ======================
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
REFRESH_TOKEN_EXPIRATION_DAYS=30

# ======================
# AI/ML CONFIGURATION
# ======================
LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2
EMBEDDING_MODEL=BAAI/bge-m3
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=500
LLM_TIMEOUT_SECONDS=5

# RAG Configuration
RAG_TOP_K=20
RAG_RERANK_TOP_K=5
RAG_CACHE_TTL=3600

# ======================
# VOICE SERVICES
# ======================
STT_MODEL=faster-whisper-large-v3
TTS_MODEL=coqui-xtts-v2
VOICE_SAMPLE_RATE=16000

# ======================
# EXTERNAL APIS (Optional)
# ======================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# ======================
# MONITORING
# ======================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# ======================
# FRONTEND
# ======================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ======================
# SECURITY
# ======================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE_MB=10

# ======================
# COPPA COMPLIANCE
# ======================
MINIMUM_AGE_WITHOUT_CONSENT=13
PARENTAL_CONSENT_EMAIL_FROM=noreply@openlearn.ai

# ======================
# DEPLOYMENT
# ======================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
